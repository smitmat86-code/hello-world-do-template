{
  "name": "hello-world-do-template",          // keep or rename; just match your Worker name in Cloudflare
  "main": "src/index.ts",
  "compatibility_date": "2024-01-01",

  // Durable Object binding for risk / P&L state
  "durable_objects": {
    "bindings": [
      {
        "name": "TRADING_BOT_STATE",
        "class_name": "TradingBotState"
      }
    ]
  },

  // Migration that actually creates the Durable Object namespace
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["TradingBotState"]
    }
  ]
}
